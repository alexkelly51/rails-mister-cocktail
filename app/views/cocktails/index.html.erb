<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <h1>Cocktail Hour</h1>
    <%= link_to "Add a new Cocktail", new_cocktail_path, class: "btn btn-primary"  %>
  </a>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://source.unsplash.com/collection/962396/1600x900');">
            <%= link_to cocktail.name, cocktail_path(cocktail), class: "card-link"%>
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>

          <div class="card-tags">
            <!-- list of tags -->
            <% cocktail.ingredients.each do |ingredient| %>
              <span><%= ingredient.name %></span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

</div>
